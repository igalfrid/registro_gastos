<h4>Movements</h4>
<table class="striped">
  <thead>
  <tr>
    <th>Date</th>
    <th>Type</th>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  </thead>

  <tbody>
  <% @movements.each do |movement|%>
  </tr>
    <td><%=localize(movement.created_at, :format => :long) %></td>
    <td><%=movement.type%></td>
    <td><%=movement.description%></td>
    <td><%=movement.amount%></td>
    <td>
      <%= link_to 'Show', movement %>
      <%= link_to 'Edit', edit_movement_path(movement) %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="input-field col s12">
    <%= link_to 'New', new_movement_path, class: 'btn'%>
  </div>
</div>